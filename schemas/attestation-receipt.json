{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://agentfutures.dev/schemas/attestation-receipt.json",
  "title": "Attestation Receipt (Detached Signature)",
  "description": "Receipt payload for Attestation Receipts v0.1. Signature is stored separately.",
  "type": "object",
  "required": ["receipt_version", "id", "issuer", "subject", "issuanceDate", "credentialSubject"],
  "properties": {
    "receipt_version": {
      "type": "string",
      "const": "0.1"
    },
    "id": {
      "type": "string",
      "description": "Unique receipt identifier (recommended urn:uuid:...)"
    },
    "type": {
      "type": "array",
      "items": { "type": "string" },
      "default": ["TaskAttestationReceipt"]
    },
    "issuer": {
      "type": "string",
      "description": "Issuer identifier (recommended DID)"
    },
    "subject": {
      "type": "string",
      "description": "Subject identifier (recommended DID)"
    },
    "issuanceDate": {
      "type": "string",
      "format": "date-time"
    },
    "expirationDate": {
      "type": "string",
      "format": "date-time"
    },
    "nonce": {
      "type": "string"
    },
    "audience": {
      "type": "string"
    },
    "schema": {
      "type": "string"
    },
    "meta": {
      "type": "object",
      "additionalProperties": true
    },
    "credentialSubject": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
